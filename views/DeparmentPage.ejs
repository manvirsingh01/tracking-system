<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= departmentName %> Department</title>
    <link rel="stylesheet" href="/styles/common.css">
</head>
<body>
    <main>
        <h2><%= departmentName %></h2>
        <table border="1">
            <thead>
                <tr>
                    <th>Document ID</th>
                    <th>Document Name</th>
                    <th>Recent Date</th>
                    <th>Recent Time</th>
                    <th>Recent Place</th>
                    <th>Previous Date</th>
                    <th>Previous Time</th>
                    <th>Previous Place</th>
                </tr>
            </thead>
            <tbody>
                <% data.forEach((row) => { %>
                <tr>
                    <td><a href="/view-qr/<%= row.id %>"><%= row.id %></a></td>
                    <td><%= row.name %></td>
                    <td><%= row.recentDate %></td>
                    <td><%= row.recentTime %></td>
                    <td><%= row.recentPlace %></td>
                    <td><%= row.previousDate %></td>
                    <td><%= row.previousTime %></td>
                    <td><%= row.previousPlace %></td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </main>
</body>
</html>
