<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Document Details</title>
    <link rel="stylesheet" href="/public/css/EditDetail.css">
</head>
<body>
    <h1>Edit Details for Document: <%= documentDetails.id %></h1>

    <h2>Current Details</h2>
    <table>
        <tr>
            <th>ID</th>
            <td><%= documentDetails.id %></td>
        </tr>
        <tr>
            <th>Name</th>
            <td><%= documentDetails.name %></td>
        </tr>
        <tr>
            <th>Recent Place</th>
            <td><%= documentDetails.recentPlace %></td>
        </tr>
        <tr>
            <th>Recent Time</th>
            <td><%= documentDetails.recentTime %></td>
        </tr>
        <tr>
            <th>Recent Date</th>
            <td><%= documentDetails.recentDate %></td>
        </tr>
    </table>

    <h2>Actions</h2>

    <!-- Receive Action -->
    <h3>Receive Document</h3>
    <form action="/EditDetail/<%= documentDetails.id %>" method="POST">
        <input type="hidden" name="action" value="receive">
        <label for="recentPlace">Recent Place:</label>
        <select id="recentPlace" name="recentPlace" required>
            <option value="admin">Admin</option>
            <option value="forensic">Forensic</option>
            <option value="account">Account</option>
            <option value="academics">Academics</option>
        </select><br>

        <label for="recentTime">Recent Time:</label>
        <input type="time" id="recentTime" name="recentTime" required><br>

        <label for="recentDate">Recent Date:</label>
        <input type="date" id="recentDate" name="recentDate" required><br>

        <button type="submit">Receive</button>
    </form>

    <!-- Forward Action -->
    <h3>Forward Document</h3>
    <form action="/EditDetail/<%= documentDetails.id %>" method="POST">
        <input type="hidden" name="action" value="forward">
        <label for="newPlace">New Place:</label>
        <select id="newPlace" name="newPlace" required>
            <option value="admin">Admin</option>
            <option value="forensic">Forensic</option>
            <option value="account">Account</option>
            <option value="academics">Academics</option>
        </select><br>

        <label for="newTime">New Time:</label>
        <input type="time" id="newTime" name="newTime" required><br>

        <label for="newDate">New Date:</label>
        <input type="date" id="newDate" name="newDate" required><br>

        <button type="submit">Forward</button>
    </form>

    <br>
    <a href="/">Back to Documents</a>
</body>
</html>
