<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document Details and QR Code</title>
    <link rel="stylesheet" type="text/css" href="/public/css/viewQr.css">
</head>
<body>
    <h1>QR Code and Details for Document: <%= documentDetails.id %></h1>

    <h2>Document Details</h2>
    <table>
        <thead>
            <tr>
                <th>Field</th>
                <th>Value</th>
            </tr>
        </thead>
        <tbody>
            <% for (const [key, value] of Object.entries(documentDetails)) { %>
                <tr>
                    <td><%= key %></td>
                    <td><%= value %></td>
                </tr>
            <% } %>
        </tbody>
    </table>

    <h2>QR Code</h2>
    <img src="public/qr-codes/<%= documentDetails.id %>.png" alt="QR Code" style="width: 200px; height: 200px;" />
    <br><br>

    <h2>Log Data</h2>
<table border="1">
    <thead>
        <tr>
            <th>Date</th>
            <th>InTime</th>
            <th>Place</th>
            <th>OutTime</th>
            <th>Action</th>
            <th>Previous Place</th>
            <th>Previous Time</th>
            <th>Previous Date</th>
        </tr>
    </thead>
    <tbody>
        <% if (logData && logData.length > 0) { %>
            <% logData.forEach(log => { %>
                <tr>
                    <td><%= log.Date %></td>
                    <td><%= log.InTime %></td>
                    <td><%= log.Place %></td>
                    <td><%= log.OutTime %></td>
                    <td><%= log.Action %></td>
                    <td><%= log.PreviousPlace || 'N/A' %></td>
                    <td><%= log.PreviousTime || 'N/A' %></td>
                    <td><%= log.PreviousDate || 'N/A' %></td>
                </tr>
            <% }); %>
        <% } else { %>
            <tr>
                <td colspan="8">No log data available</td>
            </tr>
        <% } %>
    </tbody>
</table>


    <a href="/">Back to Documents</a>
</body>
</html>
